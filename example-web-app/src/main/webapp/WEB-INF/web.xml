<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>org.igye.sandbox.examplewebapp.servlets.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TextFormatServlet</servlet-name>
    <servlet-class>org.igye.sandbox.examplewebapp.servlets.textformat.TextFormatServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ApiDispatcherServlet</servlet-name>
    <servlet-class>org.igye.sandbox.examplewebapp.servlets.ApiDispatcherServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TextFormatServlet</servlet-name>
    <url-pattern>/format_text</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ApiDispatcherServlet</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
</web-app>
